<!--begin::Body-->
@*background-image: url('../../../../Assets/Admin/media/bg/LoginBackgroundImage.png')*@
<body id="kt_body" style="background-image: url('../../../../Admin/media/bg/bg_1.jpg'); height: 100%" class="quick-panel-right demo-panel-right offcanvas-right header-fixed subheader-enabled page-loading" ondragstart="return false">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-5 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center bgi-size-cover bgi-no-repeat flex-row-fluid" style="background-image: url('../../../../Admin/media/bg/bg_1.jpg')">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-body">
                        <div class="d-flex mb-5 justify-content-center">
                            <a href="#">
                                <img src="~/images/Logo/Logo.png" class="logo mt-6 max-h-100px" alt="" />
                            </a>
                        </div>
                        <!--end::Login Header-->
                        <!--begin::Login Sign in form-->
                        <div class="login-signin">

                            <form class="text-center contact-form" data-autosubmit="false" autocomplete="off" method="post" action="" id="OTPVerificationForm" accept-charset="UTF-8">

                                @Html.AntiForgeryToken()
                                <input type="hidden" value="@ViewBag.UserId" name="UserId" id="UserId" />
                                <div class="row pt-5">
                                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                        <p class="text-center">
                                            <span class="lead text-body">Enter the code that was sent to your number.</span><br />
                                        </p>
                                        <p hidden class="text-body">
                                              <span class="small">+</span><span class="" name="otpEmail" id="otpEmail">@(ViewBag.Email != null ? ViewBag.Email : "")</span>
                                        </p>
                                        <div class="digit-group" data-group-name="digits">
                                            <div id="otp">
                                                <div class="form-group form-focus d-flex justify-content-center">
                                                    <input type="text" class="digits" id="digit-1" name="digit-1" data-next="digit-2" required />
                                                    <input type="text" class="digits" id="digit-2" name="digit-2" data-next="digit-3" data-previous="digit-1" required />
                                                    <input type="text" class="digits" id="digit-3" name="digit-3" data-next="digit-4" data-previous="digit-2" required />
                                                    <input type="text" class="digits" id="digit-4" name="digit-4" data-next="digit-5" data-previous="digit-3" required />
                                                </div>
                                                <div class="mt-2 mb-2"><span id="timer"></span></div>
                                                <center class="mt-2 mb-2"><a class="text-danger" href="javascript:;" style="display:none;" id="otpResend">Resend OTP</a></center>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12 mt-2 mb-4">
                                        <button type="submit" class="submit btn btn-outline-white font-weight-bold px-15 py-3" id="btnOtpVerfiscation">Submit</button>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group mb-auto d-flex justify-content-center">
                                <!--<div class="checkbox-inline">-->
                                @*<label class="checkbox checkbox-outline checkbox-white text-white m-0">
                                    <input type="checkbox" name="remember" />
                                    <span></span>Remember me
                                    </label>*@
                                <!--</div>-->
                                <h6 class="row signup-text" id="@*kt_login_signup*@">Don't have an account?</h6>
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <a href="javascript:;" id="kt_login_forgot" class="font-weight-bolder text-purple row">Forgot Password ?</a>
                            </div>
                        </div>
                        <!--end::Login Sign in form-->
                        <!--begin::Login Sign up form-->
                        <div class="login-signup">
                            <div class="mb-20">
                                <h3>Sign Up</h3>
                                <p class="opacity-60">Enter your details to create your account</p>
                            </div>
                            <form class="form text-center" id="kt_login_signup_form">
                                <div class="form-group group">
                                    <input class="inputField h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-0 border-0 py-4 px-8" type="text" placeholder="Full name" name="fullname" />
                                </div>
                                <div class="form-group group">
                                    <input class="inputField h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-0 border-0 py-4 px-8" type="text" placeholder="Email" name="email" autocomplete="off" />
                                </div>
                                <div class="form-group group">
                                    <input class="inputField h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-0 border-0 py-4 px-8" type="password" placeholder="Password" name="password" />
                                </div>
                                <div class="form-group group">
                                    <input class="inputField h-auto text-white placeholder-white opacity-70 bg-dark-o-70 rounded-0 border-0 py-4 px-8" type="password" placeholder="Confirm Password" name="cpassword" />
                                </div>
                                <div class="form-group text-left px-8">
                                    <div class="checkbox-inline">
                                        <label class="checkbox checkbox-outline checkbox-white text-white m-0">
                                            <input type="checkbox" name="agree" />
                                            <span></span>I Agree the
                                            <a href="javascript:;" class="text-white font-weight-bold ml-1">terms and conditions</a>.
                                        </label>
                                    </div>
                                    <div class="form-text text-muted text-center"></div>
                                </div>
                                <div class="form-group">
                                    <button id="kt_login_signup_submit" class="btn btn-outline-white font-weight-bold px-15 py-3 m-2">Sign Up</button>
                                    <button id="kt_login_signup_cancel" class="btn btn-outline-white btn-grey font-weight-bold px-15 py-3 m-2">Cancel</button>
                                </div>
                            </form>
                        </div>
                        <!--end::Login Sign up form-->
                        <!--begin::Login forgot password form-->
                        <div class="login-forgot">
                            @*<div class="mb-10">
                                <h3 style="color:black;">Forgotten Password ?</h3>
                                <p class="" style="color:black;">Enter your email to reset your password</p>
                                </div>*@
                            <form class="form" id="kt_login_forgot_form">

                                <div class="row mb-5">
                                    <h3 class="float-left ml-4">Forgotten Password ?</h3>

                                    <p class="float-left ml-4">Enter your email to reset your password</p>
                                    @*<p class="" style="color:black;">Enter your details to login to your account</p>*@
                                </div>


                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <input type="text" name="Email" class="inputField h-auto text-black placeholder-dark-75 opacity-70 bg-dark-o-70 rounded-0 border-0 py-4 px-8" required>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label>Email</label>
                                </div>
                                <div class="form-group">
                                    <button id="kt_login_forgot_submit" class="btn btn-outline-white font-weight-bold px-15">Submit</button>
                                    @*<button id="kt_login_forgot_cancel" class="btn btn-outline-white btn-grey font-weight-bold px-15">Cancel</button>*@
                                </div>
                                <div class="form-group d-flex justify-content-center">
                                    <a href="javascript:;" id="kt_login_forgot_cancel" class="font-weight-bolder text-purple row">Cancel</a>
                                </div>
                            </form>
                        </div>
                        <!--end::Login forgot password form-->
                    </div>


                    <div class="d-flex justify-content-center">
                        <span class="align-bottom" style="color:darkgray">Version 1.0.2</span>
                        @*<a href="javascript:;" id="kt_login_signup" class="text-white font-weight-bold">Sign Up</a>*@
                    </div>

                </div>
            </div>
            <!--end::Login-->
        </div>
    </div>

