    <script>

        var i = 0;
        $(document).ready(function () {
            $(".inputField").focus(function () {
                if (i == 0) {
                    $(".inputField").val('');
                    $("#Password").prop('type', 'password');
                    i++;
                }
            });

            $("input[name=Email]:eq(0)").blur();
        });
    </script>
</body>
