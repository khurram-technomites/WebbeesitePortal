@section Scripts {
    @*<script src="~/assets/admin/plugins/custom/ckeditor/ckeditor-classic.bundle.js"></script>*@
    <script src="~/Admin/js/general/ModalPopup.js"></script>
     <script src="~/js/intlTelInput/intlTelInput.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>
    <script src="~/Admin/plugins/custom/ckeditor/ckeditor-classic.bundle.js"></script>
    <script>

        'use strict';
        var _URL = window.URL || window.webkitURL;
        var documentlist = [];
        var Description
        // Class definition
        var filePath, file, AppendDiv, DivTitle, DeleteID, DivExistID;;
        $(document).ready(function() {
            initIntlInputs()


            $("#SaveSchedule").click(function() {

                var c = $('input[name=RefNumber]').val();
                var b = $('input[name=ExpiryDate]').val();
                var a = $('select[name=NameDocs]').val();
                filePath



                if (c == "" || b == "" || a == "" || filePath == undefined) {
                    toastr.error("Please fill all fields");
                }
                else {
                    debugger;
                    if (a == "Trade License") {
                        AppendDiv = "#TradeLicenseDiv";
                        DivTitle = "Trade License";
                        DeleteID = 0;
                        DivExistID = "TradeLicenseExist";

                    }
                    else {
                        AppendDiv = "#IdProofDiv";
                        DivTitle = "ID Proof";
                        DeleteID = 1;
                        DivExistID = "IDProofExist";
                    }
                    var ExpiryDate = $('input[name=ExpiryDate]').val();
                    var RefNumber = $('input[name=RefNumber]').val()
                    $('#SaveSchedule').addClass('spinner spinner-sm spinner-left').attr('disabled', true);
                    let list = {
                        "Type": $('select[name=NameDocs]').val(),
                        "ExpiryDateTime": $('input[name=ExpiryDate]').val(),
                        "Path": filePath,
                        "RefNumber": $('input[name=RefNumber]').val(),

                    }
                    documentlist.push(list)
                    console.log(documentlist)
                    $(AppendDiv).empty()
                    var DocumentHTML = `<div class="form-group mb-3">
                                                                                    <input value="TRUE" id="${DivExistID}" hidden />
                                                                                                <label class="control-label" style="font-size:11px;">${DivTitle}</label>
                                                                                                    <div class="bg-dark-o-15 w-100 p-4 rounded d-flex justify-content-between align-items-center">
                                                                                                        <div class="float-left d-flex align-items-center">
                                                                                                            <div class="bg-dark-o-20 rounded d-flex justify-content-center align-items-center" style="height: 60px; width: 60px;">
                                                                                                                <a href=" ${filePath}" target="_blank"><i class="fa fa-download font-size-h1 text-black-50"></i></a>
                                                                                                            </div>
                                                                                                            <div class="pl-1">
                                                                                                                <p class="m-0 text-black-50 line-height-md font-size-xs">
                                                                                                                    <span class="TRADE-LICENSE-EXP-DATE"> ${ExpiryDate}</span><br />
                                                                                                                    <span class="font-weight-bold text-dark TRADE-LICENSE-REFNUMBER"> ${RefNumber}</span><br />
                                                                                                                    <span class="TRADE-LICENSE-FILE-NAME">${DivTitle}.pdf</span>
                                                                                                                </p>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="float-right">
                                                                                                            <i class="fa fa-trash text-danger my-cursor" onclick="DeleteDocument(this,${DeleteID})"></i>
                                                                                                        </div>
                                                                                                    </div>
                                                                                            </div>`;
                    $(AppendDiv).append(DocumentHTML);
                    $('#SaveSchedule').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
                    FileExists();
                    ClearField()
                    $('#TradeLicense').modal('hide');
                    toastr.success("Uploaded Successfully")
                }
            })

        });

        function ClearField() {
            $('input[name=RefNumber]').val('')
            $('input[name=ExpiryDate]').val('')
            $('select[name=NameDocs]').val('')
            filePath = '';
            $('#fileUpload').val('')
        }

        $('#CountryId').change(function() {

            var count = 0;
            var $dropdown = $("#CityId");
            if ($(this).val() == 0) {
                $dropdown.empty();
                $dropdown.append($("<option />").val('').text("Please Select Country First!"));
            }
            else {
                $.ajax({
                    type: 'Get',
                    url: '/Admin/Vendor/GetCityBycountryId?countryId=' + $(this).val(),
                    success: function(response) {
                        $dropdown.empty();
                        $dropdown.append($("<option />").val('').text("Select city"));
                        var cities = response.data;
                        $.each(cities, function(k, v) {
                            $dropdown.append($("<option />").val(v.id).text(v.name));
                            count++;
                        });
                    }
                });
            }
        });
        function SaveVendor(element) {

            $('#DraftButton').addClass('spinner spinner-sm spinner-left').attr('disabled', true);

            var data = {

                NameAsPerTradeLicense: $('input[name="NameAsPerTradeLicense"]').val(),
                FullName: $('input[name="FullName"]').val(),
                ContactNumber1:$('input[id="ContactNumber1Code"]').val() + ' ' + $('input[name="ContactNumber1"]').val(),
                ContactNumber2: $('input[id="ContactNumber2Code"]').val() + ' ' +$('input[name="ContactNumber2"]').val(),
                Whatsapp: $('input[id="WhatsappCode"]').val() + ' ' + $('input[name="Whatsapp"]').val(),
                OfficeAddress: $('input[name="OfficeAddress"]').val(),
                Website: $('input[name="Website"]').val(),
                CityId: $('#CityId').val(),
                CountryId: $('#CountryId').val(),
                Email: $('input[name="Email"]').val(),
                TrnNumber: $('input[name="TrnNumber"]').val(),
                TradeLicensePath: $('input[name="TradeLicensePath"]').val(),
                IDProofPath: $('input[name="IDProofPath"]').val(),
                TradeLicenseNo: $('input[name="TradeLicenseNo"]').val(),
                Email: $('input[name="Email"]').val(),
                VendorDocuments: documentlist,
                User:
                {
                    Password: $('input[name="Password"]').val(),
                    PhoneNumber: '971' + $('input[name="PhoneNumber"]').val()
                }
            }
            $(element).find('i').hide();
            $(element).addClass('spinner spinner-left spinner-sm').attr('disabled', true);
            $.ajax({
                url: '/Admin/Vendor/Create',
                type: 'POST',
                data: { 'model': data },
                success: (response) => {
                    if (response.success) {
                        //$('#DraftButton').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
                        toastr.success("Vendor Created successfully ...");
                        window.location.href = response.url;
                    }
                    else {
                        $('#DraftButton').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
                        toastr.error(response.message);
                    }
                    //location.reload();
                },
                error: function(error) {
                    toastr.options = {
                        "positionClass": "toast-bottom-right",
                    };
                    $('#DraftButton').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
                    //toastr.error('Something went wrong ...');
                }
            })
        }

        function TradeLicensePopUp() {
            FileExists()
            $("#TradeLicense").modal('show');
            $("input[name=ExpiryDate]").datepicker();
        }
        function DeleteDocument(elem, Type) {
            debugger;
            let DivID, DivLabel;
            debugger;
            $(elem).removeClass("fa fa-trash text-danger my-cursor").addClass("spinner spinner-sm spinner-center");
            if (Type == 0) {
                DivID = "#TradeLicenseDiv";
                DivLabel = "Trade License";
            } else if (Type == 1) {
                DivID = "#IdProofDiv";
                DivLabel = "ID Proof"
            }
            for (var i = documentlist.length - 1; i >= 0; --i) {
                if (documentlist[i].Type == DivLabel) {
                    documentlist.splice(i, 1);
                }
            }
            console.log(documentlist)
            $(DivID).empty();
            var DocumentHTML = ` <div class="form-group mb-3" onclick="TradeLicensePopUp()">
                                                                                                <label class="control-label" style="font-size:11px;">${DivLabel}</label>
                                                                                                <div class="bg-dark-o-15 w-100 p-5 rounded d-flex justify-content-center align-items-center" style=" border: #c1c1c1 2px dashed;">
                                                                                                    <p class="m-0 pb-2 pt-2 text-dark-50 font-weight-bold">Upload</p>
                                                                                                </div>
                                                                                            </div>`
            $(DivID).append(DocumentHTML);
            toastr.success("Deleted Successfully")
        }
        function FileExists() {
            debugger;

            let TradeLicenseExist = $("#TradeLicenseExist").val();
            let IDProofExist = $("#IDProofExist").val();

            if (TradeLicenseExist == "TRUE") {
                $(".TradeLicenseOp").attr("hidden", true);
            }
            else {
                $(".TradeLicenseOp").attr("hidden", false);
            }

            if (IDProofExist == "TRUE") {
                $(".IDProofOp").attr("hidden", true);
            }
            else {
                $(".IDProofOp").attr("hidden", false);
            }

        }
        $("#fileUpload").change(function(e) {

            if ((file = this.files[0])) {
                if (this.files[0].size >= 5000000) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Document size should be equal to 5 MB !',
                        //footer: '<a href>Image size should be less than or equal to  100KB and dimension should be 1713x540</a>'
                    })
                    $("#fileUpload").val("");
                }
                filePath = UploadImageToDraft(file).responseText;
            }
        });
    </script>
