@model WebApp.ViewModels.SupplierPackageViewModel
@{
    ViewBag.Title = "Details";
    Layout = null;
}


<div class="modal-header">
    <h5 class="modal-title">Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="float-right mb-3">
                <i class="fa fa-calendar"></i>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <b><label>Creation Date:</label></b>
                @if (Model.CreationDate != null)
                {
                    var date = Model.CreationDate.ToString("dd MMM yyyy, h:mm tt");
                    <label class="control-label" readonly="readonly">@date</label>
                }
                else
                {
                    <label class="control-label" readonly="readonly"> - </label>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">Name</label>
                <div class="input-group mb-3">
                    <label class="form-control" readonly="readonly">@Model.Name</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-tag"></i></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">Billing Period </label>
                <div class="input-group mb-3">
                    <label class="form-control " readonly="readonly">@Model.BillingPeriod</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-tag"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1 col-sm-12">
            <div class="form-group">
                <label class="control-label" style=" margin-left: 4px;">Free</label>
                <span class="switch ml-10">
                    <label style=" margin-left: -35px;">
                        @Html.CheckBox("IsFree", new { @disabled = "disabled" })
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
        <div class="col-md-5" style="width: 100%; margin-left: auto;">
            <div class="form-group">
                <label class="control-label">Price </label>
                <div class="input-group mb-3">
                    <label class="form-control " readonly="readonly">@Model.Price</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-money-bill-wave"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">No of Months</label>
                <div class="input-group mb-3">
                    <label class="form-control text-right" readonly="readonly">@Model.MonthCount</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-building"></i></span>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <label class="control-label">Descritpion</label>
                <div class="input-group mb-2">
                    <textarea class="form-control" readonly="readonly" rows="3">@Model.Description</textarea>
                </div>
            </div>
        </div>


        @*<div class="col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label">Country Name (Ar)</label>
                <div class="input-group mb-3">
                    <label class="form-control float-right" readonly="readonly">@Model.NameAr</label>
                    <div class="input-group-append">
                        <span class="input-group-text"><i class="fa fa-flag"></i></span>
                    </div>
                </div>
            </div>
        </div>*@
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>



