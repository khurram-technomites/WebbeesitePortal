    @if(Model.PromoBanners != null && Model.PromoBanners.Thumbnail != "" && Model.PromoBanners.Thumbnail != null)
    {
        <script>
            $("#thumbnailbanner").removeAttr('hidden','hidden')
        </script>
    }

    <script>
        'use strict';
        var _URL = window.URL || window.webkitURL;
        var VideoPath = '@(Model.PromoBanners!= null?Model.PromoBanners.ImagePath:"")';
        var ImagePath ='@(Model.PromoBanners!= null?Model.PromoBanners.Thumbnail:"")';
        $(document).ready(function () {
            if (SuccessMessage) {
            toastr.success(SuccessMessage);
        }
        else if (ErrorMessage) {
            toastr.error(ErrorMessage);
        }
            if (VideoPath == '') {
                $("#RemoveVideo").hide();
            }
            $('#UploadVideo').on('click', () => {
                $('#Video').click();
            });
             $('#UploadThumbnail').on('click', () => {
                $('#Thumbnail').click();
            });
            $("#Video").change(function () {
                debugger
                $('#UploadVideo').addClass('spinner spinner-sm spinner-left').attr('disabled', true);

                var file = this.files[0];
                VideoPath = UploadImageToDraft(file).responseText;
                $(".VideoBanner").val(VideoPath);
                console.log("Path", VideoPath)
                 $("#videobanner").removeAttr('hidden','hidden')
                $('#promoVideo').attr('src', VideoPath);
                 $("#bannervideo").val(VideoPath);
                $("#RemoveVideo").show();
                $('#UploadVideo').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
            });
             $("#Thumbnail").change(function () {
                debugger
                $('#UploadThumbnail').addClass('spinner spinner-sm spinner-left').attr('disabled', true);

                var file = this.files[0];
                ImagePath = UploadImageToDraft(file).responseText;
                console.log("Path", ImagePath)
                  $("#thumbnailbanner").removeAttr('hidden','hidden')
                $('#thumbnailimage').css("background-image", "url(" + ImagePath + ")");
                  $("#bannerimage").val(ImagePath);
                $("#RemoveThumbnail").show();
                $('#UploadThumbnail').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);
            });

        })

function DeleteVideo() {
                 $("#bannervideo").val('');
                  $("#videobanner").attr('hidden','hidden')
}
function DeleteThumbnail() {
                 $("#bannerimage").val('');
                  $("#thumbnailbanner").attr('hidden','hidden')
}

$('#FormPromotionBanners').on('submit',function(){
    if($("#bannerimage").val() == '' ){
