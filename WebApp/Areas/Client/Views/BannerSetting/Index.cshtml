@section Scripts {
    <!--begin::Page Scripts(used by this page)-->
    <script src="~/Admin/js/client/BannerSetting/manage.js"></script>
    <!--end::Page Scripts-->
    <script src="~/Admin/js/general/ModalPopup.js"></script>
