@section Scripts {
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js" defer></script>
    <script src="/Admin/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="/Admin/js/general/ModalPopup.js"></script>
    <script src="~/Admin/plugins/custom/ckeditor/ckeditor-classic.bundle.js"></script>

    <script>
        $(document).ready(function () {
            SortingItemPostion();
        });

        function AppendMenu(response) {
            var html = `<div class="card card-custom gutter-b sortable-default branch-input menu-item-garage sortable" data-attr="${response.id}">
                                    <div class="card-body">

                                        <!--begin::Top-->
                                        <div class="d-flex">

                                            <img src="/Images/Icons/Path 72.svg" class="tile_header mr-2  pr-2" />
                                            <!--begin::Pic-->
                                            <!--end::Pic-->
                                            <!--begin: Info-->
                                            <div class="flex-grow-1">
                                                <!--begin::Title-->
                                                <div class="row align-items-center justify-content-between flex-wrap general-info">
                                                    <!--begin::User-->
                                                    <div class="col-11">
                                                        <!--begin::Name-->
                                                        <a href="#" id="menu-name" class="pb-2 d-flex align-items-center text-dark text-hover-primary font-size-h3 font-weight-bold ml-4">${response.title}</a>
                                                        <div class="d-flex flex-wrap">
                                                            <a href="#" id="menu-item-count" class="text-muted text-hover-primary font-weight-bold ml-4 opacity-70">${response.route}</a>
                                                        </div>
                                                    </div>

                                                    <div class="col-1 action-buttons text-center">

                                                                        <a href="javascript:;" class="btn btn-danger btn-icon menu-delete" onclick="DeleteGarageMenu(this,${response.id} +","+ ${response.garageMenuId} )">
                                                            <i class="fa fa-trash-alt"></i>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>`;

            $("#MenuDiv").append(html);
        };

        function DeleteGarageMenu(e, id, garageMenuId) {
            debugger;
            $(e).addClass("spinner spinner-notch spinner-center");
            $(e).children('i').remove();
            $.ajax({
                url: "/Client/MenuManagement/DeleteGarageMenu/" + id + '?garageMenuId=' + garageMenuId,
                type: "Get",
                success: function (response) {
                    if (response.success) {
                        $(e).closest(".menu-item-garage").remove();
                        toastr.success(response.message);
                    }
                }

            })
        };

        function SortingItemPostion() {


            $('.item_sortable').sortable({
                handle: ".tile_header",

                update: function (event, ui) {

                    $(".separator").hide();
                    $(".loader").show();
                    var ImagePositions = [];
                    $(".menu-item-garage").each(function (k, v) {
                        ImagePositions.push({ Id: Number($(v).attr('data-attr')), Position: (k + 1) });
                    });
                    debugger;
                    if (ImagePositions.length > 0) {
                        $.ajax({
                            type: 'Post',
                            url: "/Client/MenuManagement/SavePosition/",
                            data: { positions: ImagePositions },
                            success: function (response) {
                                if (response.success) {

                                    toastr.success(response.message);
                                }
                                else {
                                    toastr.error(response.message);
                                }
                            }
                        });
                    }
                }
            });

        }
    </script>
}