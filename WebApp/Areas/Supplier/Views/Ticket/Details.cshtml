<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-12 subheader-transparent" id="kt_subheader">
        <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Heading-->
                <div class="d-flex flex-column">
                    <!--begin::Breadcrumb-->
                    <div class="d-flex align-items-center font-weight-bold my-2">
                        <!--begin::Item-->
                        <a href="/Supplier/Dashboard/Index" class="opacity-75 hover-opacity-100">
                            <i class="flaticon2-shelter text-white icon-1x"></i>
                        </a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <a href="/Supplier/Dashboard/Index" class="text-white text-hover-white opacity-75 hover-opacity-100">&nbsp;&nbsp;Dashboard</a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
                        <a href="/Supplier/Ticket/Index" class="text-white text-hover-white opacity-75 hover-opacity-100"> Tickets</a>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <span class="label label-dot label-sm bg-white opacity-75 mx-3"></span>
                        <a href="javascript:;" class="text-white text-hover-white opacity-75 hover-opacity-100">Details</a>
                        <!--end::Item-->
                    </div>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Heading-->
            </div>
            <!--end::Info-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Dashboard-->
            <!--begin::Row-->
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b">
                        @*<div class="card-header text-center">
                                <h5 class="card-title">Card title</h5>
                            </div>*@
                        <div class="card-body">
                            @Html.HiddenFor(mod => mod.Id, new { @id = "TicketID" })
                            <!-- begin: Invoice-->
                            <!-- begin: Invoice header-->
                            <div class="justify-content-xxl-end px-8 px-md-0 row text-center ">
                                <div class="col-md-6">
                                    <div class="head">
                                        <h3 class="text-left mb-6">Ticket Details</h3>
                                    </div>
                                </div>
                                <div class="col-md-6 d-flex">
                                    <div class="d-flex flex-column flex-root">
                                        <span class="font-weight-bolder mb-2">ISSUE DATE</span>
                                        <span class="opacity-70">@(Model.CreationDate != null ? Model.CreationDate.ToString("MMM dd, yyyy, h:mm tt") : "")</span>

                                    </div>

                                    <div class="d-flex flex-column flex-root">
                                        <span class="font-weight-bolder mb-2">TICKET NO.</span>
                                        <span class="opacity-70">@Model.TicketNo</span>
                                    </div>


                                    <div class="d-flex flex-column flex-root">
                                        <span class="font-weight-bolder mb-2">STATUS</span>
                                        <span class="text-center align-middle">


                                            @if (@Model.Status.ToUpper() == "OPEN")
                                            {
                                            <a href="javascript:" class="label label-lg label-light-dark label-inline">OPEN</a>
                                            }
                                            else if (@Model.Status.ToUpper() == "CLOSED")
                                            {
                                            <a href="javascript:" class="label label-lg label-light-primary label-inline">CLOSED</a>
                                            }



                                        </span>

                                    </div>

                                    <div class="d-flex flex-column flex-root">
                                        <span class="font-weight-bolder mb-2">PRIORITY</span>
                                        <span class="text-center align-middle">


                                            @if (@Model.Priority.ToUpper() == "HIGH")
                                            {
                                            <a href="javascript:" class="label label-lg label-light-dark label-inline">HIGH</a>
                                            }
                                            else if (@Model.Priority.ToUpper() == "MEDIUM")
                                            {
                                            <a href="javascript:" class="label label-lg label-light-primary label-inline">MEDIUM</a>
                                            }
                                            else if (@Model.Priority.ToUpper() == "LOW")
                                            {
                                            <a href="javascript:" class="label label-lg label-light-primary label-inline">LOW</a>
                                            }



                                        </span>

                                    </div>
                                </div>
                            </div>
                            <div class="accordion accordion-dark  accordion-toggle-arrow mt-4" id="accordionExample5">
                                <div class="card ">
                                    <div class="card-header" id="headingOne5">
                                        <div class="card-title" data-toggle="collapse" data-target="#collapseOne5">
                                            Description
                                        </div>
                                    </div>
                                    <div id="collapseOne5" class="collapse show" data-parent="#accordionExample5">
                                        <div class="card-body">
                                            @Model.Description
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="border-bottom w-100 mt-3"></div>
                            <div class="justify-content-center px-8 px-md-0 py-4 row text-center">
                                <div class="container-fluid chat-container  cc-scroll  a-disabled-hover">
                                    <div class="row h-100">
                                        <div class="col d-flex p-0">
                                            <div class="d-flex flex-column p-0" style="flex:9 1">
                                                <div class="container-fluid " style="flex: 1 1">

                                                    @foreach (var item in Model.ticketConversation)
                                                    {
                                                        if (item.SenderType == "Admin")
                                                        {
                                                    <div class="row">
                                                        <div class="clearfix">
                                                            <div class="date-time text-left">
                                                                <p class="direct-chat-timestamp pull-right">
                                                                    <span><strong>@item.SenderType</strong></span> @item.CreationDate
                                                                </p>
                                                            </div>
                                                            <div class="card message-card bg-lg-pink  m-1">
                                                                <div class="card-body p-2 text-left">
                                                                    @if (item.Message != null)
                                                                    {
                                                                        <span class="">@item.Message </span>
                                                                    }
                                                                    @if (item.TicketDocumentId != null)
                                                                    {
                                                                        <div class="text-center mt-4">
                                                                            <a href="@item.TicketDocument.URL" target="_blank" class="file btn-bg-light text-center"><i style="color: #d30606 !important" class="fas fa-paperclip"></i>View Attachment</a>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                        }

                                                        else
                                                        {
                                                            <div class="row justify-content-end">
                                                                <div class="clearfix">
                                                                    <div class="date-time text-right">
                                                                        <p class="direct-chat-timestamp pull-left">
                                                                            @item.CreationDate
                                                                            <span id="senderName"><strong>@item.SenderType</strong></span>
                                                                        </p>
                                                                    </div>
                                                                    <div class="card message-card bg-lightgreytext m-1 float-right">
                                                                        <div class="card-body p-2 ">

                                                                            @if (item.Message != null)
                                                                            {
                                                                            <span class="">@item.Message </span>
                                                                                    }
                                                                               
                                                                                @if (item.TicketDocumentId != null)
                                                                                {
                                                                                    <div class="text-center mt-4">
                                                                                        <a href="@item.TicketDocument.URL" target="_blank" class="file btn-bg-lights"><i style="color: #d30606 !important" class="fas fa-paperclip "></i>View Attachment</a>
                                                                                    </div>
                                                                                }
                                                                            </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            
                                                        }

                                                    }
                                                    <div id="conversation">

                                                    </div>



                                                </div>


                                            </div>

                                        </div>
                                    </div>
                                    <!-- row -->
                                </div>
                                <div class="border-bottom w-100 mt-3"></div>

                                <div class="input-group mt-5">
                                    <input type="text" id="Message" class="form-control input-message fas fa-paperclip" placeholder="Input message...">
                                    <button class="clip btn border-0 bg-white text-primary hover-color-darkblue" onclick="openFileOption()" type="button" style="z-index: 3;">
                                        <i class="fas fa-paperclip nc fa-2x">

                                        </i>
                                    </button>

                                    <input type="file" hidden name="Logo" id="Logo" accept="image/png, image/gif, image/jpeg" />

                                </div>
                                <div class="send">
                                    <span class="input-group-addon">
                                        <button class="btn border-0 bg-white text-primary hover-color-darkblue" style="background: #d30606 !important" onclick="Send(this)" type="button">
                                            <i id="iconSpin" class="fab fa-telegram-plane fa-2x"></i>
                                        </button>
                                    </span>
                                </div>

                                <!-- container -->
                            </div>
                            <div class="row p-2 " id="fileAttachment">
                                <div class="file-atacth float-left">
                                    <span class="fas fa-paperclip attachment-file">
                                        <label id="AttachmentName" style="font-family: 'Poppins';"><span>file</span></label>
                                        <i class="fal fa-times" onclick="Erase()"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!--end::Row-->

                    </div>
                    <!--end::Container-->
                </div>


                <!--end::Entry-->
            </div>

        </div>

    </div>
</div>

