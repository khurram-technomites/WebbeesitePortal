            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>


        var fileAttachments = "";
        jQuery(document).ready(function () {
            $("#fileAttachment").hide();



            //

            //Chat Scroll
            var rowPos = $("#conversation").position();
            $(".cc-scroll").scrollTop(rowPos.top);

        });

        function openFileOption() {
            document.getElementById("Logo").click();
        }

        function Send(f) {
            $("#iconSpin").removeClass('fab fa-telegram-plane');
            $("#iconSpin").addClass('spinner spinner-light spinner-border-sm').prop('disabled', true);
            
            var rowPos = $("#conversation").position();
            var senderName = $("#senderName").text();
            var data = new FormData();
            var conversation = $("#conversation");
            var attachment = $("#Logo").get(0).files;
            if (attachment.length > 0) {
                data.append("Image", attachment[0]);
            }
            if ($('#Message').val() != '' ) {
                data.append("Message", $('#Message').val());
            }
            
            data.append("TicketID", $('#TicketID').val());
            data.append("File", fileAttachments);
            data.append("TicketDocument", $("#TicketDocument").val());
            data.append("TicketDocumentId", $("#TicketDocumentId").val());
            data.append("__RequestVerificationToken", $('input[name=__RequestVerificationToken]').val());
            var html;
            $.ajax({

                url: '/Supplier/Ticket/Message',
                type: 'POST',
                data: data,
                processData: false,
                contentType: false,

                success: function (data) {
                    console.log("Data " , data);
                    if (data.success) {
                        html = '<div class="row justify-content-end">';
                        html += '<div class="clearfix">';
                        html += '<div class="date-time text-right">';
                        html += '<p class="direct-chat-timestamp pull-left">' + data.creationDate;
                        html += '<span id = "senderName" > <strong>' + data.data.senderType + '</strong></span></p></div>';
                        html += '<div class="card message-card bg-lightgreytext m-1 float-right">';
                        html += '<div class="card-body p-2">';
                        html += '<span class="">' + data.data.message + '</span>';
                        if (data.data.ticketDocument != null) {
                            html += ' <div class="text-center mt-4"><a href=' + data.data.ticketDocument.url + '  target="_blank" class="file btn-bg-lights"><i class="fas fa-paperclip "></i>View Attachment</a></div>';
                        }
                        html += '</div></div></div></div>';

                        conversation.append(html);
                        toastr.success(data.message);
                        $("#Message").val("");
                        $("#Logo").val('');
                        $("#fileAttachment").hide();
                        /*$(fileAttachments).val("");*/
                        $("#iconSpin").removeClass('spinner spinner-light spinner-border-sm').prop('disabled', false);
                        $("#iconSpin").addClass('fab fa-telegram-plane fa-2x');
                        $(".cc-scroll").scrollTop(rowPos.top);
                        fileAttachments = '';
                    }
                    else {
                        $("#iconSpin").removeClass('spinner spinner-light spinner-border-sm').prop('disabled', false);
                        $("#iconSpin").addClass('fab fa-telegram-plane fa-2x');
                        toastr.error(data.message);

                    }
                },

            });


        }

        function Erase() {
            
            $("#fileAttachment").fadeOut(1000);
            var check0 = $("#Logo").val();
            $("#Logo").val('');
            var check = $("#Logo").val();

        }
        var _URL = window.URL || window.webkitURL;
        $("#Logo").change(function (e) {

            

            var file, img;
            if ((file = this.files[0])) {

                img = new Image();
                img.onload = function () {


                    if (this.size > 50000) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Image size must be less than 50 kb!',

                        });
                    }
                    else {
                        img.onerror = function () {
                            alert("not a valid file: " + file.type);
                        };
                    }
                };

                $("#AttachmentName").text(this.files[0].name);
                $("#fileAttachment").fadeIn(1000);
                img.src = _URL.createObjectURL(file);
                fileAttachments = UploadImageToDraft(file).responseText;


            }
        });


        function callback(dialog, elem, isedit, response) {


            if (response.success) {

                toastr.success(response.message);
            }
            else {
                jQuery('form', dialog).closest('.modal').find('button[type=submit]').removeClass('spinner spinner-sm spinner-left').attr('disabled', false);

                toastr.error(response.message);
            }
        }






