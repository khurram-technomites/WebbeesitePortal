
@model WebApp.ViewModels.Survey.SurveyQuestionViewModel

@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">

    <form id="frm-edit">

        @Html.AntiForgeryToken()
        <div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="col-md-12 col-sm-6">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <div class="input-group mb-2">
                        <input class="form-control" readonly id="Name" value="@Model.Name" />
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-pen"></i></span></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="form-group">
                    <label class="control-label">Survey</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" value="@(Model.Survey != null ? Model.Survey.Name : "-")" readonly/>
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-tasks"></i></span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="control-label">Question Type</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" readonly value="@Model.Type"/>
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-pen"></i></span></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="control-label">Position</label>
                    <div class="input-group mb-2">
                        <input type="number" readonly asp-for="Position" id="Position" placeholder="0" step=".01" min="0" class="form-control" />
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-hashtag"></i></span></div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <label class="control-label">Question ?</label>
                    <div class="input-group mb-2">
                        <textarea class="form-control" readonly id="Question">@Model.Question</textarea>
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-question-circle"></i></span></div>
                    </div>
                </div>
            </div>

            <div class="col-md-2 col-sm-4">
                <div class="checkbox-inline mt-lg-3">
                    <label class="checkbox">
                        <input type="checkbox" disabled @(Model.IsRequired == true ? "checked" : "") id="required_chkbx">
                        <span></span>
                        Required
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>


