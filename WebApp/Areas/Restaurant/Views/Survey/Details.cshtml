@model WebApp.ViewModels.Survey.SurveyViewModel

@{
    Layout = null;
}


<div class="modal-header">
    <h5 class="modal-title">Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">

    <form asp-action="Detail" asp-controller="Survey" id="Userform">

        @Html.AntiForgeryToken()
        <div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">


            <div class="col-md-12 col-sm-6">
                <div class="form-group">
                    <label class="control-label">Branch</label>
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" value='@(Model.RestaurantBranch != null ? Model.RestaurantBranch.NameAsPerTradeLicense : "-" )' readonly/>
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-building"></i></span></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="form-group">
                    <label class="control-label">Survey Name</label>
                    <div class="input-group mb-2">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Survey name here ...", required = "required" , @readonly="readonly" } })@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-pen"></i></span></div>
                    </div>
                </div>
            </div>
           
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>


