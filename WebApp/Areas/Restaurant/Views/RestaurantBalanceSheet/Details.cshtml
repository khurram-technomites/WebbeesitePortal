@model WebApp.ViewModels.RestaurantBalanceSheetViewModel

@{
	Layout = null;
}
<style>
	.dt-image {
		height: 90px;
		width: 100%;
		max-width: 90px;
	}
</style>
<div class="modal-header">
	<h5 class="modal-title">Details</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<i aria-hidden="true" class="ki ki-close"></i>
	</button>
</div>
<div class="modal-body">

	<div class="alert alert-danger text-center" id="divMessage" style="display:none"></div>
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)

	<div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xxl">
		<!--begin::Post-->
		<div class="content flex-row-fluid pb-0" id="kt_content">
			<!--begin::Tab Content-->
			<div class="tab-content">
				<!--begin::Tab pane-->
				<div id="kt_project_users_card_pane" class="tab-pane fade show active" role="tabpanel">
					<!--begin::Row-->
					<div class="row g-6 g-xl-9">
						<!--begin::Col-->
						<div class="col-12">
							<!--begin::Card-->
							<div class="">
								<!--begin::Card body-->
								<div class="card-body d-flex flex-center flex-column p-9 pt-12">
									<!--begin::Avatar-->
									<div class="symbol symbol-65px symbol-circle mb-5 border border-2 border-light-primary">
										<img class="dt-image" src="@Url.Content(Model.CashierStaffLogo)" alt="image">
									</div>
									<!--end::Avatar-->
									<!--begin::Name-->
									<a href="#" class="fs-4 text-gray-800 text-hover-primary fw-bold mb-0">@Model.CashierStaffName</a>
									<!--end::Name-->
									<!--begin::Position-->
									<div class="fw-semibold text-gray-400 mb-6">Cashier Staff</div>
									<!--end::Position-->
									<!--begin::Info-->
									<div class="d-flex flex-center w-100">
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.OpeningBalance</div>
											<div class="fw-semibold text-gray-400">Opening Balance</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.ClosingBalance</div>
											<div class="fw-semibold text-gray-400">Closing Balance</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.TotalTax</div>
											<div class="fw-semibold text-gray-400">Total Tax</div>
										</div>
										<!--end::Stats-->
									</div>
									<!--end::Info-->
									<!--begin::Info-->
									<div class="d-flex flex-center w-100">
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.TotalCashSale</div>
											<div class="fw-semibold text-gray-400">Total Cash Sale</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.TotalCardSale</div>
											<div class="fw-semibold text-gray-400">Total Card Sale</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.TotalCreditSale</div>
											<div class="fw-semibold text-gray-400">Total Credit Sale</div>
										</div>
										<!--end::Stats-->
									</div>
									<!--end::Info-->
									<!--begin::Info-->
									<div class="d-flex flex-center w-100">
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.AggregatorOnlineSale</div>
											<div class="fw-semibold text-gray-400">Aggregator Online Sale</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.AggregatorCashSale</div>
											<div class="fw-semibold text-gray-400">Aggregator Cash Sale</div>
										</div>
										<!--end::Stats-->
										<!--begin::Stats-->
										<div class="border border-gray-300 border-dashed rounded min-w-80px py-3 px-4 mx-2 mb-3 w-50">
											<div class="fs-6 fw-bold text-primary">AED @Model.GrandTotal</div>
											<div class="fw-semibold text-gray-400">Grand Total</div>
										</div>
										<!--end::Stats-->
									</div>
									<!--end::Info-->
								</div>
								<!--end::Card body-->
							</div>
							<!--end::Card-->
						</div>
						<!--end::Col-->
					</div>
					<!--end::Row-->
				</div>
				<!--end::Tab pane-->
			</div>
			<!--end::Tab Content-->
		</div>
		<!--end::Post-->
	</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>

