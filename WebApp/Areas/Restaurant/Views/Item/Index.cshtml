    <!--end::Page Scripts-->
    <script src="/Admin/js/general/ModalPopup.js"></script>
    <!--end::Page Scripts-->
    <script src="~/js/cropper.js"></script>

    <script src="~/js/compressor.js"></script>
    <script src="~/Admin/js/general/ImageUploader-2.0.js"></script>
    <script>
        $("#ExcelButton").click(function () { location.href = '/Restaurant/Item/ItemReport' })

        function upload() {
            $('#myModal').modal('hide');
            $('#cover-spin').show(0);

            var data = new FormData();

            data.append('file', $('#fileUpload')[0].files[0]);

            $.ajax({
                url: "GetExcel",
                type: "POST",
                processData: false,
                contentType: false,
                data: data,
                success: function (response) {
                    if (response.success) {
                        $('#cover-spin').hide(0);
                        toastr.success(response.message);

                        response.data.forEach(function (item) {
                            table1.row.add([
                                item.firstRow,
                                item.secondRow,
                                item.thirdRow,
                                item.forthRow,
                                item.forthRow + ',' + item.fifthRow,
                            ]).draw(true);
                        });
                    }
                    else {
                        $('#cover-spin').hide(0);
                        toastr.error(response.message);
                    }

                },
                error: function (er) {
                    $('#cover-spin').hide(0);
                    toastr.error("An error occured while reading the file. Make sure the first column is not empty.");
                }
            });
        }
    </script>

